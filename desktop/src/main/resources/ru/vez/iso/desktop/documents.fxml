<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vez.iso.desktop.document.DocumentCtl">
   <children>
   </children>
   <top>
      <ToolBar maxWidth="1.7976931348623157E308" prefHeight="40.0" BorderPane.alignment="CENTER">
        <items>
            <Button fx:id="butOpenFile" accessibleHelp="Открыть диск" accessibleText="Открыть диск" defaultButton="true" layoutX="10.0" layoutY="12.0" mnemonicParsing="false" onAction="#onOpenFile">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/open.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Выбрать диск с документами (файл Dev.zip)" />
               </tooltip>
            </Button>
            <Button fx:id="butDownload" disable="true" layoutX="10.0" layoutY="12.0" mnemonicParsing="false" onAction="#onDownload">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@image/download.png" />
                        </image>
                    </ImageView>
                </graphic>
               <tooltip>
                  <Tooltip text="Загрузить документ" />
               </tooltip>
            </Button>
            <Button fx:id="butPrint" disable="true" layoutX="130.0" layoutY="12.0" mnemonicParsing="false" onAction="#onPrint">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@image/print.png" />
                        </image>
                    </ImageView>
                </graphic>
               <tooltip>
                  <Tooltip text="Печатать документ" />
               </tooltip>
            </Button>
            <Button fx:id="butCheckHash" disable="true" layoutX="170.0" layoutY="12.0" mnemonicParsing="false" onAction="#onCheckHash">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Проверить контрольную сумму (hash)" />
               </tooltip>
            </Button>
            <TextField promptText="фильтр" />
            <Button fx:id="butSearchDocs" disable="true" layoutX="10.0" layoutY="12.0" mnemonicParsing="false" onAction="#onSearchDocs">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/search.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Выполнить поиск" />
               </tooltip>
            </Button>

        </items>
      </ToolBar>
   </top>
   <center>
       <TableView fx:id="tblDocuments" maxHeight="1.7976931348623157E308">
           <columns>
               <TableColumn fx:id="selection" maxWidth="30.0" minWidth="30.0" prefWidth="30.0">
               <graphic>
                  <CheckBox fx:id="selectAll" mnemonicParsing="false" onAction="#onSelectAll">
                     <tooltip>
                        <Tooltip text="Выделить все/Снять выделение" />
                     </tooltip></CheckBox>
               </graphic></TableColumn>
               <TableColumn fx:id="docNumber" prefWidth="100.0" text="Номер документа" />
               <TableColumn fx:id="kindIdName" editable="false" minWidth="50.0" prefWidth="100.0" text="Вид документа" />
               <TableColumn fx:id="operDayDate" prefWidth="75.0" text="Дата опер.дня" />
               <TableColumn fx:id="sumDoc" prefWidth="75.0" text="Сумма" />
               <TableColumn fx:id="branch" prefWidth="75.0" text="Подразделение" />
               <TableColumn fx:id="docDate" prefWidth="75.0" text="Дата документа" />
               <TableColumn fx:id="docStatusName" prefWidth="75.0" text="Статус документа" />
           </columns>
       </TableView>
   </center>

</BorderPane>
