<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="366.0" prefWidth="472.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vez.iso.desktop.login.LoginCtl">

    <TextField fx:id="username" layoutX="133.0" layoutY="157.0" prefHeight="26.0" prefWidth="274.0" promptText="Enter username" />

    <PasswordField fx:id="password" layoutX="133.0" layoutY="222.0" onKeyPressed="#onPressEnter" prefHeight="26.0" prefWidth="274.0" promptText="Enter password" />

    <Button fx:id="butLogin" layoutX="205.0" layoutY="283.0" onAction="#onLogin" onKeyPressed="#onPressEnter" prefHeight="37.0" prefWidth="87.0" text="Login">
      <font>
         <Font name="Arial Black" size="14.0" />
      </font></Button>

    <Label layoutX="179.0" layoutY="52.0" text="Login">
      <font>
         <Font name="Bell MT Bold" size="44.0" />
      </font>
   </Label>

   <Label layoutX="30.0" layoutY="159.0" text="User name:">
      <font>
         <Font name="Arial Black" size="14.0" />
      </font>
   </Label>
   <Label layoutX="37.0" layoutY="224.0" text="Password:">
      <font>
         <Font name="Arial Black" size="14.0" />
      </font>
   </Label>
   <Label fx:id="lbStatus" layoutX="48.0" layoutY="333.0" prefHeight="18.0" prefWidth="358.0" text="User is logged out" />
</AnchorPane>
