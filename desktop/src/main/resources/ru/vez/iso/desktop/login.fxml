<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vez.iso.desktop.login.LoginCtl"
          stylesheets="@style.css">

    <Label alignment="BOTTOM_CENTER" layoutX="179.0" layoutY="52.0" maxWidth="1.7976931348623157E308" prefHeight="54.0"
           text="Вход в АБДД" textAlignment="CENTER" GridPane.columnIndex="1"
           GridPane.columnSpan="2" GridPane.rowIndex="2" styleClass="desktop-header-1" >
    </Label>

    <Label alignment="TOP_RIGHT" layoutX="30.0" layoutY="159.0" maxWidth="1.7976931348623157E308"
           text="Имя пользователя:" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="desktop-label">
    </Label>

    <TextField fx:id="username" layoutX="133.0" layoutY="157.0" prefHeight="26.0" prefWidth="274.0" promptText="admin"
               GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="desktop-input"/>

    <Label alignment="TOP_RIGHT" layoutX="37.0" layoutY="224.0" maxWidth="1.7976931348623157E308"
           text="Пароль:" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="desktop-label">
    </Label>

    <PasswordField fx:id="password" layoutX="133.0" layoutY="222.0" prefHeight="26.0"
                   prefWidth="274.0" promptText="admin" GridPane.columnIndex="2" GridPane.rowIndex="4"
                   styleClass="desktop-input"/>

    <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0"
               GridPane.columnIndex="2" GridPane.rowIndex="5">
        <buttons>
            <Button fx:id="butLogin" defaultButton="true" onAction="#onPressLogin" onKeyPressed="#onPressEnter"
                    styleClass="desktop-button" text="Войти">
                <tooltip>
                    <Tooltip text="Подключиться к серверу"/>
                </tooltip>
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@image/login.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="butLogout" disable="true" onAction="#onLogout" styleClass="desktop-button" text="Выйти">
                <tooltip>
                    <Tooltip text="Отключиться от сервера"/>
                </tooltip>
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@image/logout.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </buttons>
    </ButtonBar>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="ALWAYS"/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" vgrow="ALWAYS"/>
    </rowConstraints>
</GridPane>
