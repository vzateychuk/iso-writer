<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vez.iso.desktop.disks.DiskCtl">
      <top>
         <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="butReload" mnemonicParsing="false" onAction="#onReload">
               <tooltip>
                  <Tooltip text="Перечитать" />
               </tooltip>
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/view.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
               <Button fx:id="butWriteCopy" mnemonicParsing="false" onAction="#onWriteCopy">
                  <tooltip><Tooltip text="Write Disk Copy: Записать диск" /></tooltip>
                  <font>
                     <Font name="Arial Black" size="12.0" />
                  </font>
                  <graphic>
                     <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@image/write.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
                <Button fx:id="butCheck" onAction="#onCheck">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Проверить" />
               </tooltip></Button>
            </children>
         </HBox>
      </top>
      <center>
         <GridPane gridLinesVisible="true" BorderPane.alignment="CENTER">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
         </GridPane>
      </center>
      <bottom>
      
          <Text text="Запись и проверка" BorderPane.alignment="CENTER" />
      </bottom>

</BorderPane>
